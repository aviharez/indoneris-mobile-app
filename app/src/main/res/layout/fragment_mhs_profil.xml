<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".feature.mhs.profil.MhsProfilFragment">

    <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:id="@+id/ll_toolbar"
            android:elevation="8dp"
            android:layout_height="80dp">

        <TextView
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:textColor="#fff"
                android:id="@+id/tv_judul_atas"
                android:layout_marginTop="10dp"
                android:text="Profil Mahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/linearLayout"
                  android:gravity="center_horizontal"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="15dp"
                  android:elevation="5dp"
                  android:layout_below="@id/ll_toolbar">

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/mhs_bg_event"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/iv_foto"
        android:layout_marginBottom="10dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini nama"
                  android:layout_gravity="center"
                  android:textSize="25sp"
                  android:textStyle="bold"
                  android:textColor="@color/colorPurpleG1"
                  android:id="@+id/tv_nama_mhs"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/ll_rxtbio"
                  android:layout_below="@id/linearLayout"
                  android:paddingRight="15dp"
                  android:paddingLeft="15dp"
                  android:elevation="5dp"
                  android:background="@drawable/bg_biokotak"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tanggal Lahir"
                  android:textSize="15sp"
                  android:layout_marginTop="15dp"
                  android:id="@+id/txt_tgl"
                  android:textColor="@color/colorPurpleG1"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini tgll"
                  android:layout_marginTop="5dp"
                  android:paddingBottom="5dp"
                  android:id="@+id/tv_tgl_lahir"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tempat Lahir"
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:textColor="@color/colorPurpleG1"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini tl"
                  android:paddingBottom="5dp"
                  android:id="@+id/tv_tempat_lahir"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Jenis Kelamin"
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:textColor="@color/colorPurpleG1"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini jk"
                  android:paddingBottom="5dp"
                  android:id="@+id/tv_jk"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:textColor="@color/colorPurpleG1"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini email"
                  android:paddingBottom="5dp"
                  android:id="@+id/tv_email"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="SKKM"
                  android:textSize="15sp"
                  android:layout_marginTop="5dp"
                  android:textColor="@color/colorPurpleG1"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="ini skkm"
                  android:paddingBottom="15dp"
                  android:id="@+id/tv_skkm"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_biokotak"
            android:elevation="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/ll_rxtbio"
            android:layout_alignParentBottom="true"
            android:id="@+id/rv_history_point"
            tools:listitem="@layout/recycler_view_item_1">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>